[colors]
background = #000000
foreground = #ededed
;accent-1 = #3bb314
;accent-2 = #30960f
accent-0 = #6eb05b
accent-1 = #50943d
accent-2 = #2f6620
accent-3 = #1d4711
accent-4 = #0c2405
red = #a83232

[bar/workspace]

width = 12%
height = 3.5%
offset-x = 44%
offset-y = 0.3%
fixed-center = true
radius = 15.0
line-size = 2

font-0 = "Noto Sans:style=Regular:size=13;1"
font-1 = "Symbola:style=Regular:size=13;1"
font-2 = "Font Awesome 5 Brands Regular:style=Regular;1"
font-3 = "Font Awesome 5 Free Solid:style=Solid;1"
font-4 = "Font Awesome 5 Free Regular:style=Regular;1"

modules-center = hlwm

[module/hlwm]
type = internal/xworkspaces
width =  100%

pin-workspaces = false
enable-click = true
enable-scroll = false
format-padding = 0
icon-default = "⚫"

format = "<label-state>"
;format-underline = #3c783c

label-active = " %icon% "
label-active-foreground = ${colors.accent-1}

label-empty = " %icon% "
label-empty-foreground = ${colors.foreground}

[bar/info]
width = 27.5%
height = 3.5%
offset-x = 2%
offset-y = 0.3%
fixed-center = true
radius = 15.0

font-0 = "Noto Sans:style=Regular:size=13;1"
font-1 = "MaterialIcons:style=Regular:size=13;2"
font-2 = "Symbola:style=Regular:size=13;1"
font-3 = "Font Awesome 5 Brands Regular:style=Regular;1"
font-4 = "Font Awesome 5 Free Solid:style=Solid;1"
font-5 = "Font Awesome 5 Free Regular:style=Regular;1"

padding = 5
line-size = 2

modules-left = cpu memory network date 

[module/cpu]
type = internal/cpu
interval = 1
label =  %percentage%%
format = <label>
format-padding = 2
format-underline = #00e319

[module/memory]
type = internal/memory
interval = 1
label =  %percentage_used%%
format = <label>
format-padding = 2
format-underline = #00ad13

[module/network]
type = internal/network
interface = wlp2s0
interval = 4
label-connected =  %essid%
label-disconnected = 
format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-connected-padding = 2
format-disconnected-padding = 2
format-connected-underline = #00800e
format-disconnected-underline = #00800e

[module/date]
type = internal/date
interval = 10
time = %H:%M
date = %d %B %Y
label = %date%  %time%
format = <label>
format-padding = 2
format-underline = #005709

[bar/controls]
width = 25%
height = 3.25%
offset-x = 74%
offset-y = 0.4%
fixed-center = true
radius = 15.0

background = #0c2405


font-0 = "Noto Sans:style=Regular:size=13;2"
font-1 = "MaterialIcons:style=Regular:size=13;2"
font-2 = "Symbola:style=Regular:size=13;2"
font-3 = "Font Awesome 5 Brands Regular:style=Regular;2"
font-4 = "Font Awesome 5 Free Solid:style=Solid;2"
font-5 = "Font Awesome 5 Free Regular:style=Regular;2"
font-6 = "Iosevka Nerd Font:style=Medium:size=19;5"

padding = 0

tray-position = right
tray-detached = true
tray-maxsize = 16
tray-background = ${colors.accent-4}
tray-padding = 1

modules-left = right0 window right1 backlight right2 pulseaudio right3 suspend right4 

[module/window]
type = internal/xwindow

format = <label>
format-prefix = " " 
format-padding = 1
format-background = ${colors.accent-0}

label = %title%
label-maxlen = 15
label-empty = " "

[module/right0]
type = custom/text
content-foreground = ${colors.accent-0}
content-background = ${colors.accent-0}
content = "%{T7}%{T-}"

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp><label>
format-background = ${colors.accent-1}
format-padding = 1
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/right1]
type = custom/text
content-background = ${colors.accent-0}
content-foreground = ${colors.accent-1}
content = "%{T7}%{T-}"  

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

use-ui-max = true
interval = 2

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.accent-2}
label-muted = 🔇
label-muted-background = ${colors.accent-2}
label-muted-foreground = ${colors.red}
format-volume-padding = 1
label-muted-padding = 1

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

click-left = amixer set Master toggle

[module/right2]
type = custom/text
content-background = ${colors.accent-1}
content-foreground = ${colors.accent-2}
content = "%{T7}%{T-}"

[module/suspend]
type = custom/text
content-background = ${colors.accent-3}
content = 
content-padding = 1

click-left = sudo systemctl suspend

[module/right3]
type = custom/text
content-background = ${colors.accent-2}
content-foreground = ${colors.accent-3}
content = "%{T7}%{T-}"

[module/right4]
type = custom/text
content-background = ${colors.accent-3}
content-foreground = ${colors.accent-4}
content = "%{T7}%{T-}"

; vim:ft=dosini
