[module/spotify]
type = custom/script
interval = 1
exec = sh ~/.config/polybar/spotify.sh

format-prefix = "ÔÜº "
format-padding = 1.5
format-foreground = ${colors.foreground}
format-background = ${colors.accent-4} 
click-left = playerctl -p spotify play-pause

[module/left]
type = custom/script
exec-if = playerctl -p spotify status 2>/dev/null | grep -q "P*"
interval = 1
format-foreground = ${colors.accent-4} 
exec = echo "%{T7}ÓÇ∂%{T-}"

